# Coolify Configuration for CTFNote

# Pad Configuration
CMD_PROTOCOL_USESSL=true
CMD_DOMAIN=${FQDN}
CMD_CSP_ENABLE=true
CMD_IMAGE_UPLOAD_TYPE=filesystem
CMD_DOCUMENT_MAX_LENGTH=100000

# Database Configuration (will be overridden by Coolify)
DB_DATABASE=ctfnote
DB_ADMIN_LOGIN=ctfnote
DB_ADMIN_PASSWORD=ctfnote
DB_USER_LOGIN=user_postgraphile
DB_USER_PASSWORD=secret_password
DB_HOST=db
DB_PORT=5432

# Discord Integration (optional)
USE_DISCORD=false
DISCORD_BOT_TOKEN=
DISCORD_SERVER_ID=
DISCORD_VOICE_CHANNELS=3
DISCORD_REGISTRATION_ENABLED=false
DISCORD_REGISTRATION_CTFNOTE_ROLE=user_guest
DISCORD_REGISTRATION_ROLE_ID=

# Timezone and Locale
TZ=Europe/Amsterdam
LC_ALL=en_US.UTF-8

# Session Secret (generate with: pwgen -s 64 1)
SESSION_SECRET=

# Coolify specific
COOLIFY_FQDN=${FQDN}
COOLIFY_URL=${FQDN}
